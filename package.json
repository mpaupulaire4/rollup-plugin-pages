{
  "name": "@mpaupulaire4/rollup-plugin-pages",
  "version": "1.0.0",
  "license": "MIT",
  "types": "./types/lib/index.d.ts",
  "module": "./lib/index.js",
  "main": "./lib/index.js",
  "author": "Michel Paupulaire <mpaupulaire4@gmail.com>",
  "repository": "git@github.com:mpaupulaire4/rollup-plugin-pages.git",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "yarn lint && yarn test run",
    "format": "prettier --write \"./src/**/*.{js,html,ts}\" \"./lib/**/*.{js,ts}\"",
    "lint": "eslint './lib/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "prelint:fix": "yarn format",
    "test": "echo vitest",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "build": "tsc",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitest/coverage-c8": "^0.23.2",
    "eslint": "^8.22.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.2"
  },
  "dependencies": {
    "mustache": "^4.2.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
